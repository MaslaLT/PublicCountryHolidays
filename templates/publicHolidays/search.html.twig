{% extends 'base.html.twig' %}

{% block title %}Search Public Country Holidays{% endblock %}

{% block body %}
    <form class="m-3">
        <div class="row">
            <div class="col-md-6 mb-2">
                <input type="text" name="country" class="form-control" placeholder="Country" value="{{ country }}" required>
            </div>
            <div class="col-md-6 mb-2">
                <input type="number" name="year" class="form-control" placeholder="Year" value="{{ year }}" required>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 mb-2">
                <button type="submit" class="btn btn-success" value="Search">Search for holidays</button>
            </div>
        </div>
    </form>

    {% if holidays %}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Month</th>
                <th>Day</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
    </table>
    {% else %}
        <p>
            Please enter Country and Year to see holidays.
        </p>
    {% endif %}
{% endblock %}